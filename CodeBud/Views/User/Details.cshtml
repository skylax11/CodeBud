@model CodeBud.Models.Entities.UserModel

@{
    ViewBag.Title = "Kullanıcı Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Kullanıcı Detayları</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f7fc;
        }

    
        .content {
            margin-left: 230px;
            padding: 30px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        }

        .card-header {
            background-color: transparent;
            border-bottom: none;
            font-weight: bold;
        }
    </style>
</head>
<body>

 
    <!-- 🔹 Main Content -->
    <div class="col-md-10 content">
        <div class="row mb-4">
            <div class="col-md-8 offset-md-2">
                <div class="card p-4">
                    <div class="card-header">
                        👤 Kullanıcı Detayları
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <img src="@Url.Content(Model.ImageURL)"
                                 alt="Profil Fotoğrafı"
                                 class="rounded-circle shadow"
                                 width="120"
                                 height="120"
                                 style="object-fit: cover; border: 2px solid #ccc;" />
                        </div>

                        <h4>@Model.Username</h4>
                        <p class="text-muted">E-Posta: @Model.Email</p>
                        <p class="text-muted">Rol: @Model.Role</p>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary">← Geri Dön</a>

                            @if (ViewBag.Role == "Admin")
                            {
                                <div>
                                    <a href="@Url.Action("Edit", "Admin", new { id = Model.Id })" class="btn btn-warning me-2">Düzenle</a>
                                    @if ((ViewBag.User as CodeBud.Models.Entities.UserModel).Id != Model.Id)
                                    {
                                        <a href="@Url.Action("Delete", "Admin", new { id = Model.Id })" class="btn btn-danger">Sil</a>
                                    }
                                    else
                                    {
                                        <a href="#" class="btn btn-danger disabled">Sil</a>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
