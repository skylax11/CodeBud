@{
    ViewBag.Title = "Admin Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">CodeBud</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Question")">Questions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Tag")">Tags</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "User")">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Admin")">Admin Panel</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ProfilePage", "User")">Profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">Çıkış Yap</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h2 class="card-title">🛠 Admin Paneli</h2>

            <p>Hoş geldiniz, <strong>@ViewBag.Username</strong>!</p>
            <p>Rolünüz: <span class="badge bg-secondary">@ViewBag.Role</span></p>

            <hr />

            <div class="d-grid gap-2 d-md-block">
                <a href="@Url.Action("Index", "Question")" class="btn btn-outline-primary me-2">📋 Soruları Gör</a>
                <a href="@Url.Action("Index", "User")" class="btn btn-outline-success me-2">👥 Kullanıcıları Yönet</a>
                <a href="@Url.Action("Index", "Tag")" class="btn btn-outline-info me-2">🏷️ Etiketleri Yönet</a>
            </div>
        </div>
    </div>
</div>
