@{
    ViewBag.Title = "Admin Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard | CodeBud</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f7fc;
        }

        

        .content {
            margin-left: 230px;
            padding: 30px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
        }

        .card-header {
            background-color: transparent;
            border-bottom: none;
            font-weight: bold;
        }
    </style>
</head>
<body>

        <!-- Main Content -->
        <div class="col-md-10 content">
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card p-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            🛠 Admin Paneli
                            <span class="badge bg-secondary">Rol: @ViewBag.Role</span>
                        </div>

                        <div class="card-body">
                            <p class="mb-3">Hoş geldiniz, <strong>@ViewBag.Username</strong>!</p>

                            <div class="d-flex flex-wrap gap-3">
                                <a href="@Url.Action("Index", "Question")" class="btn btn-outline-primary">📋 Soruları Gör</a>
                                <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-success">👥 Kullanıcıları Yönet</a>
                                <a href="@Url.Action("Index", "Tag")" class="btn btn-outline-info">🏷️ Etiketleri Yönet</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
