@model CodeBud.Models.Entities.UserModel

@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Eğer layout kullanıyorsan
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Kayıt Ol</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı adınızı girin" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi girin" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "E-posta adresinizi girin" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Role, new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.Role, new SelectList(new[] { "User", "Admin" }), "Rol Seçiniz", new { @class = "form-select" })
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Kayıt Ol" class="btn btn-success" />
                        </div>

                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
