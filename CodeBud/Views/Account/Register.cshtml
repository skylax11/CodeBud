@model CodeBud.Models.Entities.UserModel

@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-success">Kayıt Ol</h2>
            <p class="text-muted">Lütfen bilgilerinizi eksiksiz doldurun</p>
        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "kullaniciadi123", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">E-posta</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "ornek@site.com", required = "required" })
            </div>

            if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ViewBag.Error
                </div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-success">Kayıt Ol</button>
            </div>
        }

        <hr class="my-4" />

        <div class="text-center">
            <p class="mb-2">Zaten bir hesabınız var mı?</p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary w-100">Giriş Yap</a>
        </div>
    </div>
</div>
