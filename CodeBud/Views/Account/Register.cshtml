@model CodeBud.Models.Entities.UserModel
@{
    ViewBag.Title = "Kayıt Ol";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h3>Kayıt Ol</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    <label class="form-label">Kullanıcı Adı</label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı adınızı girin" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Şifre</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi girin" })
                </div>

                <div class="mb-3">
                    <label class="form-label">E-posta</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-posta adresinizi girin" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Rol</label>
                    @Html.DropDownListFor(m => m.Role, new SelectList(new[] { "User", "Admin" }), new { @class = "form-select" })
                </div>

                <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>

                @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                {
                    <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                }
            }
        </div>
    </div>
</div>
