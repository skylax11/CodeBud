@model CodeBud.Models.Entities.Question

@{
    ViewBag.Title = "Soru Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h2 class="card-title fw-bold mb-3">@Model.Title</h2>
            <p class="text-muted small">
                <i class="bi bi-clock"></i> @Model.CreatedAt.ToString("f")
                @if (Model.User != null)
                {
                    <span class="ms-2">| <i class="bi bi-person-circle"></i> <strong>@Model.User.Username</strong></span>
                }
            </p>

            <div class="border-start ps-3 mt-3 mb-4" style="white-space: pre-wrap;">
                @Html.Raw(Model.Description)
            </div>

            <div class="text-end">
                <a href="@Url.Action("Index", "Question")" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Tüm Sorulara Dön
                </a>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h5 class="mb-3"><i class="bi bi-chat-dots"></i> Yorumlar</h5>

        @if (Model.Comments != null && Model.Comments.Any())
        {
            foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
            {
                CodeBud.Models.Entities.UserModel user = MyProject.Web.Controllers.AccountController._db.Users.FirstOrDefault(x => x.Id == comment.UserId);
                <div class="comment-box border rounded p-3 mb-3 bg-light">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-dark fw-semibold">@user.Username</span>
                        <small class="text-muted">@comment.CreatedAt.ToString("g")</small>
                    </div>
                    <div style="white-space: pre-wrap;">@Html.Raw(comment.Content)</div>
                </div>
            }
        }
        else
        {
            <p class="text-muted fst-italic">Henüz yorum yok.</p>
        }

        @if (ViewBag.User != null)
        {
            <div class="card mt-4">
                <div class="card-body">
                    <form method="post" action="@Url.Action("AddComment", "Question")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="questionId" value="@Model.Id" />

                        <div class="form-group mb-2">
                            <label for="commentText" class="form-label fw-semibold">Yorumunuzu Yazın</label>
                            <textarea name="commentText" id="commentText" class="form-control" rows="3" placeholder="Yorum yazın..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="wrapWithCode('commentText')">
                                💡 Kodu Biçimlendir
                            </button>
                            <button type="submit" class="btn btn-sm btn-primary">Yorumu Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <p class="text-muted mt-3">Yorum yapmak için giriş yapmalısınız.</p>
        }
    </div>
</div>

<style>
    pre code {
        display: block;
        padding: 1em;
        margin: 1em 0;
        background-color: #f8f9fa;
        border-left: 4px solid #0d6efd;
        color: #212529;
        border-radius: 6px;
        overflow-x: auto;
        font-family: Consolas, 'Courier New', monospace;
        font-size: 0.95em;
    }

    .comment-box {
        transition: background-color 0.2s ease;
    }

        .comment-box:hover {
            background-color: #f1f3f5;
        }
</style>

<script>
    function wrapWithCode(textareaId) {
        var textarea = document.getElementById(textareaId);
        var start = textarea.selectionStart;
        var end = textarea.selectionEnd;

        if (start === end) {
            alert("Kod olarak biçimlendirmek için önce bir metin seçin.");
            return;
        }

        var selectedText = textarea.value.substring(start, end);
        var before = textarea.value.substring(0, start);
        var after = textarea.value.substring(end);

        var wrapped = "<pre><code>" + selectedText + "</code></pre>";
        textarea.value = before + wrapped + after;

        textarea.selectionStart = start;
        textarea.selectionEnd = start + wrapped.length;
        textarea.focus();
    }
</script>
