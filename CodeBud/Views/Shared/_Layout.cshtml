@using CodeBud.Helpers
@{
    var currentUser = JwtHelper.GetCurrentUserFromToken();
}
@if (currentUser != null)
            {
                 <div class="topbar">
     <div></div>
     <div class="d-flex align-items-center">
         <a href="@Url.Action("ProfilePage", "User")" class="me-3">
             <img src="@ViewBag.ProfileImageUrl" alt="Profil Foto" />
         </a>
         <form action="@Url.Action("Logout", "User")" method="post" class="mb-0">
             <button type="submit" class="btn btn-outline-danger btn-sm">Çıkış Yap</button>
         </form>
     </div>
 </div>
            }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CodeBud</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f7fa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 220px;
            background-color: #1f2937;
            padding: 20px 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

            .sidebar a {
                display: block;
                color: #f8f9fa;
                padding: 10px 24px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #374151;
                }

            .sidebar.collapsed {
                transform: translateX(-220px);
            }

        .main-content {
            margin-left: 220px;
            transition: margin-left 0.3s ease;
            padding: 0;
        }

            .main-content.collapsed {
                margin-left: 0;
            }

        .topbar {
            background-color: #1f2937;
            padding: 10px 20px;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .topbar img {
                width: 40px;
                height: 40px;
                object-fit: cover;
                border-radius: 50%;
                border: 2px solid #ccc;
            }

        .toggle-btn {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1100;
            font-size: 22px;
            background: none;
            border: none;
            color: #333;
        }
    </style>
    @RenderSection("Styles", required: false)  <!-- 💥 BURAYA EKLE -->

</head>
<body>


    <!-- ☰ Toggle Button -->
    <button class="toggle-btn" onclick="toggleSidebar()">☰</button>

    <!-- ✅ Sidebar -->
    <div id="sidebar" class="sidebar">
        <div class="text-center mb-4 fw-bold fs-4 text-light">💼 CodeBud</div>
        <a href="@Url.Action("Index", "User")">🏠 Dashboard</a>
        <a href="@Url.Action("Index", "Question")">❓ Questions</a>
        <a href="@Url.Action("Index", "Tag")">🏷 Tags</a>
        @if (ViewBag.Role == "Admin")
        {
            <a href="@Url.Action("Index", "Admin")">🛠 Admin Panel</a>
        }
    </div>

    <!-- ✅ Main -->
    <div id="mainContent" class="main-content">
       

        <div class="container py-4">
            @RenderBody()
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
            document.getElementById('mainContent').classList.toggle('collapsed');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
